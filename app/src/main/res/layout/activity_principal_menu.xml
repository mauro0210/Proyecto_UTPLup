<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".principal_menu"
    android:gravity="center"
    android:background="#ff313131">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignWithParentIfMissing="true"
        android:id="@+id/linearLayout"
        android:touchscreenBlocksFocus="false"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:layout_width="171dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:src="@mipmap/logo_utpl"
            android:layout_alignWithParentIfMissing="false"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:cropToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:contentDescription="logouniversidad"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.42" />

        <Button
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:text="Buses Utpl"
            android:id="@+id/button1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff024471"
            android:layout_marginBottom="20dp"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:textColor="#fffdffff"
            android:onClick="Pasarabuses"
            />

        <Button
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="Carreras"
            android:id="@+id/button2"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff044572"
            android:layout_marginBottom="20dp"
            android:textSize="30sp"
            android:textColor="#fffffcfe"
            android:onClick="Pasaracarreras"/>

        <Button
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="Organizador"
            android:id="@+id/button3"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff064673"
            android:layout_marginBottom="20dp"
            android:textSize="30sp"
            android:textColor="#fffefdff"
            android:onClick="Pasaraorganizador"/>

        <Button
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="Mi progreso"
            android:id="@+id/button4"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff064673"
            android:textSize="30sp"
            android:textColor="#fffefdff"
            android:onClick="Pasaramiprogreso"/>

    </LinearLayout>

</RelativeLayout>
