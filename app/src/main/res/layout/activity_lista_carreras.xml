<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.example.mauro.utplup.Lista_carreras"
    android:gravity="center"
    android:background="#ff313131">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:id="@+id/unosolo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area Técnica"
                    android:id="@+id/button18"
                    android:background="#ff024471"
                    android:textColor="#fff7f7fb"
                    android:layout_marginBottom="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area Socio-Humanistica"
                    android:id="@+id/button19"
                    android:background="#ff024471"
                    android:textColor="#fff7f7fb"
                    android:layout_marginBottom="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area Biologica y Biomédica"
                    android:id="@+id/button20"
                    android:background="#ff024471"
                    android:textColor="#fff7f7fb"
                    android:layout_marginBottom="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area administrativa"
                    android:id="@+id/button21"
                    android:layout_column="0"
                    android:background="#ff024471"
                    android:textColor="#fff7f7fb" />
            </TableRow>

        </TableLayout>

</RelativeLayout>
